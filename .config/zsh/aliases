# Upgrade
alias upgrade="yay -Syu --cleanmenu=false --diffmenu=false --editmenu=false --sudoloop && cupdates upgraded && notify-send 'System upgraded' -i checkbox"

# Random secret
alias secret="cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w ${1:-32} | head -n 1"

