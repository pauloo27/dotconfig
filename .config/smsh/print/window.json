{
  "title": "SMSH: Print Window",
  "enable_vim_keys": true,
  "enable_esc_as_exit": true,
  "container": {
    "orientation": "Vertical",
    "children": [
      {
        "type": "Button",
        "text": "",
        "tooltip": "Save the active window",
        "actions": [
          {
            "type": "Shell",
            "value": "grimblast save active /home/paulo/medias/pictures/prints/$(date +%Y%m%d-%H%M%S).png && ls -t /home/paulo/medias/pictures/prints | head -1 | xargs -I {} echo \"/home/paulo/medias/pictures/prints/{}\" | wl-copy"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      },
      {
        "type": "Button",
        "text": "",
        "tooltip": "Copy the active window",
        "actions": [
          {
            "type": "Shell",
            "value": "grimblast copy active"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      }
    ]
  }
}
