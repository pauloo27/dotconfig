{
  "title": "SMSH: Print Window",
  "enable_vim_keys": true,
  "enable_esc_as_exit": true,
  "container": {
    "orientation": "Vertical",
    "children": [
      {
        "type": "Button",
        "text": "",
        "tooltip": "Save the active window",
        "actions": [
          {
            "type": "Shell",
            "value": "hyprshot -m window -o /home/paulo/medias/pictures/prints"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      },
      {
        "type": "Button",
        "text": "",
        "tooltip": "Copy the active window",
        "actions": [
          {
            "type": "Shell",
            "value": "hyprshot -m window --clipboard-only"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      }
    ]
  }
}
