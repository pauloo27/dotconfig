{
  "title": "SMSH: Print",
  "enable_vim_keys": true,
  "enable_esc_as_exit": true,
  "container": {
    "orientation": "Vertical",
    "children": [
      {
        "type": "Button",
        "text": "󰴱",
        "tooltip": "Pick a color",
        "actions": [
          {
            "type": "Shell",
            "value": "hyprpicker -a"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      },
      {
        "type": "Button",
        "text": "",
        "tooltip": "Print the active window",
        "actions": [
          {
            "type": "Shell",
            "value": "smsh ~/.config/smsh/print/window.json  ~/.config/smsh/style.css"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      },
      {
        "type": "Button",
        "text": "󰩬",
        "tooltip": "Print a specific area",
        "actions": [
          {
            "type": "Shell",
            "value": "smsh ~/.config/smsh/print/area.json  ~/.config/smsh/style.css"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      },
      {
        "type": "Button",
        "text": "󰹑",
        "tooltip": "Print the entire screen",
        "actions": [
          {
            "type": "Shell",
            "value": "smsh ~/.config/smsh/print/screen.json  ~/.config/smsh/style.css"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      }
    ]
  }
}
